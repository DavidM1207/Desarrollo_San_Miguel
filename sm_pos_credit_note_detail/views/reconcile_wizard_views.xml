<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_reconcile_confirmation_wizard_form" model="ir.ui.view">
        <field name="name">reconcile.confirmation.wizard.form</field>
        <field name="model">reconcile.confirmation.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmar Conciliación">
                <sheet>
                    <group>
                        <group>
                            <field name="line_count" readonly="1"/>
                            <field name="total_debit" readonly="1"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="total_credit" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Detalle">
                            <field name="line_details" readonly="1" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="✅ Confirmar Conciliación" 
                            name="action_confirm_reconcile" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>