<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción directa a la vista de NC detallada -->
    <record id="action_credit_note_lines_direct" model="ir.actions.server">
        <field name="name">Libro Mayor - Notas de Crédito</field>
        <field name="model_id" ref="model_credit_note_line_view"/>
        <field name="state">code</field>
        <field name="code">
action = env['pos.order'].load_all_credit_notes()
        </field>
    </record>

    <!-- Menú principal -->
    <menuitem id="menu_credit_notes_ledger"
              name="Libro Mayor Notas de Crédito"
              parent="account.menu_finance_entries"
              action="action_credit_note_lines_direct"
              sequence="15"/>
</odoo>