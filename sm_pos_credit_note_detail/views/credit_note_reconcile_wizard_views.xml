<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de formulario del wizard -->
    <record id="view_credit_note_reconcile_wizard_form" model="ir.ui.view">
        <field name="name">credit.note.reconcile.wizard.form</field>
        <field name="model">credit.note.reconcile.wizard</field>
        <field name="arch" type="xml">
            <form string="Seleccionar Notas de Crédito para Conciliar">
                <sheet>
                    <group>
                        <group>
                            <field name="session_id" readonly="1"/>
                            <field name="account_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="total_amount" readonly="1" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Notas de Crédito" name="credit_notes">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <p><strong>Instrucciones:</strong></p>
                                    <ul>
                                        <li>Selecciona las Notas de Crédito que deseas conciliar</li>
                                        <li>Haz clic en "Continuar a Conciliación" para ver los apuntes disponibles</li>
                                        <li>En la siguiente pantalla podrás seleccionar con qué apuntes deseas conciliar</li>
                                    </ul>
                                </div>
                            </group>
                            
                            <field name="line_ids" nolabel="1">
                                <tree string="Notas de Crédito" editable="bottom" 
                                      decoration-success="reconciled == True"
                                      decoration-warning="selected == True and reconciled == False">
                                    <field name="selected" widget="boolean_toggle"/>
                                    <field name="date"/>
                                    <field name="reference"/>
                                    <field name="partner_id"/>
                                    <field name="amount" sum="Total Seleccionado"/>
                                    <field name="reconciled" widget="badge" 
                                           decoration-success="reconciled == True"
                                           decoration-danger="reconciled == False"/>
                                    <field name="pos_order_id" column_invisible="1"/>
                                    <field name="move_line_id" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="Continuar a Conciliación" 
                            name="action_open_reconciliation" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            special="cancel" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Acción del wizard -->
    <record id="action_credit_note_reconcile_wizard" model="ir.actions.act_window">
        <field name="name">Conciliar Notas de Crédito</field>
        <field name="res_model">credit.note.reconcile.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
    </record>
    
</odoo>