<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- AcciÃ³n de servidor para conciliar -->
    <record id="action_reconcile_credit_notes" model="ir.actions.server">
        <field name="name">Conciliar Notas</field>
        <field name="model_id" ref="model_credit_note_line"/>
        <field name="binding_model_id" ref="model_credit_note_line"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_reconcile_lines()
        </field>
    </record>
    
    <!-- Vista tree SIN columna conciliado -->
    <record id="view_credit_note_line_tree" model="ir.ui.view">
        <field name="name">credit.note.line.tree</field>
        <field name="model">credit.note.line</field>
        <field name="arch" type="xml">
            <tree string="Libro Mayor - Notas de Credito" 
                  decoration-info="nc_type == 'nota_credito'"
                  decoration-warning="nc_type == 'refacturacion'"
                  create="false" delete="false" edit="false">
                <field name="date"/>
                <field name="name" string="Orden"/>
                <field name="session_name" string="Sesion POS"/>
                <field name="nc_type" string="Tipo" widget="badge"
                       decoration-info="nc_type == 'nota_credito'"
                       decoration-warning="nc_type == 'refacturacion'"/>
                <field name="description" string="Detalle NC"/>
                <field name="debit" string="Debe" sum="Total Debe"/>
                <field name="credit" string="Haber" sum="Total Haber"/>
                <field name="vendedor" string="Vendedor"/>
                <field name="account_id" column_invisible="1"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="pos_order_id" column_invisible="1"/>
                <field name="move_line_id" column_invisible="1"/>
                <field name="reconciled" column_invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Vista search -->
    <record id="view_credit_note_line_search" model="ir.ui.view">
        <field name="name">credit.note.line.search</field>
        <field name="model">credit.note.line</field>
        <field name="arch" type="xml">
            <search string="Buscar NC">
                <field name="name" string="Orden"/>
                <field name="session_name" string="Sesion"/>
                <field name="description" string="Descripcion"/>
                <field name="vendedor" string="Vendedor"/>
                
                <filter string="Notas de Credito" name="nc_original" domain="[('nc_type', '=', 'nota_credito')]"/>
                <filter string="Refacturaciones" name="nc_refund" domain="[('nc_type', '=', 'refacturacion')]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter string="Tipo" name="group_type" context="{'group_by': 'nc_type'}"/>
                    <filter string="Sesion" name="group_session" context="{'group_by': 'session_name'}"/>
                    <filter string="Vendedor" name="group_vendedor" context="{'group_by': 'vendedor'}"/>
                </group>
            </search>
        </field>
    </record>
    
</odoo>