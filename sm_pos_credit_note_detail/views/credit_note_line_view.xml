<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de árbol expandida para líneas de NC -->
    <record id="view_credit_note_line_expanded_tree" model="ir.ui.view">
        <field name="name">credit.note.line.view.tree</field>
        <field name="model">credit.note.line.view</field>
        <field name="arch" type="xml">
            <tree string="Notas de Crédito - Vista Detallada" 
                  editable="bottom"
                  decoration-success="nc_type == 'original'"
                  decoration-warning="nc_type == 'refund'"
                  decoration-muted="reconciled == True">
                <field name="selected" widget="boolean_toggle"/>
                <field name="date"/>
                <field name="name"/>
                <field name="account_name" optional="hide"/>
                <field name="session_name"/>
                <field name="nc_type" widget="badge" 
                       decoration-success="nc_type == 'original'"
                       decoration-warning="nc_type == 'refund'"/>
                <field name="description"/>
                <field name="debit" sum="Total Debe"/>
                <field name="credit" sum="Total Haber"/>
                <field name="analytic_distribution" optional="show"/>
                <field name="reconciled" column_invisible="1"/>
                <field name="account_id" column_invisible="1"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="move_line_id" column_invisible="1"/>
                <field name="pos_order_id" column_invisible="1"/>
                <field name="search_token" column_invisible="1"/>
                <button name="action_reconcile_selected" 
                        string="Conciliar Seleccionadas" 
                        type="object" 
                        class="btn-primary"
                        icon="fa-link"/>
            </tree>
        </field>
    </record>
    
    <!-- Vista de búsqueda -->
    <record id="view_credit_note_line_expanded_search" model="ir.ui.view">
        <field name="name">credit.note.line.view.search</field>
        <field name="model">credit.note.line.view</field>
        <field name="arch" type="xml">
            <search string="Buscar NC">
                <field name="name" string="Asiento"/>
                <field name="session_name" string="Sesión"/>
                <field name="description" string="Descripción"/>
                
                <filter string="NC Originales" name="nc_original" domain="[('nc_type', '=', 'original')]"/>
                <filter string="Refacturaciones" name="nc_refund" domain="[('nc_type', '=', 'refund')]"/>
                <separator/>
                <filter string="Seleccionadas" name="selected" domain="[('selected', '=', True)]"/>
                <filter string="No Conciliadas" name="not_reconciled" domain="[('reconciled', '=', False)]"/>
                <filter string="Conciliadas" name="reconciled" domain="[('reconciled', '=', True)]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter string="Tipo" name="group_type" context="{'group_by': 'nc_type'}"/>
                    <filter string="Sesión" name="group_session" context="{'group_by': 'session_name'}"/>
                    <filter string="Fecha" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>
    
</odoo>