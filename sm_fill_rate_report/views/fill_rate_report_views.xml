<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Lista (Tree) del Reporte Fill Rate -->
    <record id="view_fill_rate_report_tree" model="ir.ui.view">
        <field name="name">fill.rate.report.tree</field>
        <field name="model">fill.rate.report</field>
        <field name="arch" type="xml">
            <tree string="Reporte Fill Rate" 
                  create="false" 
                  edit="false" 
                  delete="false"
                  decoration-success="fill_rate &gt;= 95"
                  decoration-warning="fill_rate &gt;= 70 and fill_rate &lt; 95"
                  decoration-danger="fill_rate &lt; 70">
                <field name="create_date" string="Fecha Creación"/>
                <field name="requisition_number" string="Núm. Requisición"/>
                <field name="product_name" string="Producto"/>
                <field name="demand" string="Demanda" optional="show"/>
                <field name="qty_original" string="Cantidad Original (Solicitada)" sum="Total Solicitado"/>
                <field name="qty_delivered" string="Cantidad Entregada" sum="Total Entregado"/>
                <field name="fill_rate" string="Fill Rate (%)" 
                       widget="progressbar" 
                       decoration-success="fill_rate &gt;= 95"
                       decoration-warning="fill_rate &gt;= 70 and fill_rate &lt; 95"
                       decoration-danger="fill_rate &lt; 70"/>
                <field name="state" string="Estado" optional="show"/>
                <field name="requisition_type" string="Tipo" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Búsqueda (Search) del Reporte Fill Rate -->
    <record id="view_fill_rate_report_search" model="ir.ui.view">
        <field name="name">fill.rate.report.search</field>
        <field name="model">fill.rate.report</field>
        <field name="arch" type="xml">
            <search string="Buscar Fill Rate">
                <field name="requisition_number" string="Número Requisición"/>
                <field name="product_id" string="Producto"/>
                <field name="requisition_id" string="Requisición"/>
                <field name="create_date" string="Fecha"/>
                
                <filter name="filter_low_fill_rate" 
                        string="Fill Rate Bajo (&lt;70%)" 
                        domain="[('fill_rate', '&lt;', 70)]"/>
                <filter name="filter_medium_fill_rate" 
                        string="Fill Rate Medio (70-94%)" 
                        domain="[('fill_rate', '&gt;=', 70), ('fill_rate', '&lt;', 95)]"/>
                <filter name="filter_high_fill_rate" 
                        string="Fill Rate Alto (≥95%)" 
                        domain="[('fill_rate', '&gt;=', 95)]"/>
                
                <separator/>
                
                <filter name="filter_this_month" 
                        string="Este Mes" 
                        domain="[('create_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter name="filter_last_month" 
                        string="Mes Pasado" 
                        domain="[('create_date', '&gt;=', (context_today() - relativedelta(months=2)).strftime('%Y-%m-01')),
                                 ('create_date', '&lt;', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter name="filter_this_year" 
                        string="Este Año" 
                        domain="[('create_date', '&gt;=', context_today().strftime('%Y-01-01'))]"/>
                
                <separator/>
                
                <group expand="0" string="Agrupar Por">
                    <filter name="group_by_product" 
                            string="Producto" 
                            context="{'group_by': 'product_id'}"/>
                    <filter name="group_by_requisition" 
                            string="Requisición" 
                            context="{'group_by': 'requisition_id'}"/>
                    <filter name="group_by_month" 
                            string="Mes de Creación" 
                            context="{'group_by': 'create_date:month'}"/>
                    <filter name="group_by_state" 
                            string="Estado" 
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista de Formulario (Form) - Solo lectura -->
    <record id="view_fill_rate_report_form" model="ir.ui.view">
        <field name="name">fill.rate.report.form</field>
        <field name="model">fill.rate.report</field>
        <field name="arch" type="xml">
            <form string="Detalle Fill Rate" create="false" edit="false" delete="false">
                <header>
                    <button name="action_view_requisition" 
                            string="Ver Requisición" 
                            type="object" 
                            class="oe_highlight"/>
                    <button name="action_view_stock_moves" 
                            string="Ver Movimientos" 
                            type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="requisition_number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="requisition_info" string="Información de Requisición">
                            <field name="requisition_id" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="state" readonly="1"/>
                            <field name="requisition_type" readonly="1"/>
                        </group>
                        <group name="product_info" string="Información de Producto">
                            <field name="product_id" readonly="1"/>
                            <field name="product_name" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group name="quantities" string="Cantidades">
                            <field name="demand" readonly="1"/>
                            <field name="qty_original" readonly="1"/>
                            <field name="qty_delivered" readonly="1"/>
                        </group>
                        <group name="performance" string="Desempeño">
                            <field name="fill_rate" 
                                   widget="progressbar" 
                                   readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Pivot para análisis -->
    <record id="view_fill_rate_report_pivot" model="ir.ui.view">
        <field name="name">fill.rate.report.pivot</field>
        <field name="model">fill.rate.report</field>
        <field name="arch" type="xml">
            <pivot string="Análisis Fill Rate">
                <field name="product_id" type="row"/>
                <field name="create_date" interval="month" type="col"/>
                <field name="qty_original" type="measure"/>
                <field name="qty_delivered" type="measure"/>
                <field name="fill_rate" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vista Graph para análisis visual -->
    <record id="view_fill_rate_report_graph" model="ir.ui.view">
        <field name="name">fill.rate.report.graph</field>
        <field name="model">fill.rate.report</field>
        <field name="arch" type="xml">
            <graph string="Gráfico Fill Rate" type="line">
                <field name="create_date" interval="month"/>
                <field name="fill_rate" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Acción de ventana principal -->
    <record id="action_fill_rate_report" model="ir.actions.act_window">
        <field name="name">Fill Rate</field>
        <field name="res_model">fill.rate.report</field>
        <field name="view_mode">tree,pivot,graph,form</field>
        <field name="search_view_id" ref="view_fill_rate_report_search"/>
        <field name="context">{
            'search_default_filter_this_month': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay datos de Fill Rate disponibles
            </p>
            <p>
                Los datos del Fill Rate se generan automáticamente basándose en las requisiciones de transferencia interna y sus movimientos de inventario completados.
            </p>
            <p>
                Haga clic en el botón "Actualizar Reporte" en el menú de Acción para generar/actualizar los datos.
            </p>
        </field>
    </record>

    <!-- Acción para actualizar el reporte -->
    <record id="action_refresh_fill_rate_report" model="ir.actions.server">
        <field name="name">Actualizar Reporte Fill Rate</field>
        <field name="model_id" ref="model_fill_rate_report"/>
        <field name="binding_model_id" ref="model_fill_rate_report"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
action = model.action_refresh_report()
        </field>
    </record>

</odoo>
