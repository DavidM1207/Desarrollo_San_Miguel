<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fill_rate_report_tree" model="ir.ui.view">
        <field name="name">fill.rate.report.tree</field>
        <field name="model">fill.rate.report</field>
        <field name="arch" type="xml">
            <tree string="Reporte Fill Rate" create="false" edit="false" delete="false">
                <field name="create_date" string="Fecha de Creación"/>
                <field name="requisition_name" string="Nombre de Requisición"/>
                <field name="product_id" string="Producto"/>
                <field name="fill_rate" string="% Fill Rate" widget="percentage"/>
            </tree>
        </field>
    </record>

    <record id="view_fill_rate_report_search" model="ir.ui.view">
        <field name="name">fill.rate.report.search</field>
        <field name="model">fill.rate.report</field>
        <field name="arch" type="xml">
            <search string="Buscar Fill Rate">
                <field name="requisition_name"/>
                <field name="product_id"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Producto" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Requisición" name="group_requisition" context="{'group_by': 'requisition_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_fill_rate_report" model="ir.actions.act_window">
        <field name="name">Fill Rate</field>
        <field name="res_model">fill.rate.report</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="view_fill_rate_report_search"/>
    </record>

    <menuitem id="menu_employee_purchase_reports"
        name="Reportes"
        parent="employee_purchase_requisition.employee_purchase_requisition_menu_root"
        sequence="100"/>

    <menuitem id="menu_fill_rate_report"
        name="Fill Rate"
        parent="menu_employee_purchase_reports"
        action="action_fill_rate_report"
        sequence="10"/>
</odoo>