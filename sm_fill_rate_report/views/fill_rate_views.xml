<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fill_rate_tree_view" model="ir.ui.view">
        <field name="name">fill.rate.tree</field>
        <field name="model">fill.rate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date"/>
                <field name="requisition_name"/>
                <field name="product_id"/>
                <field name="fill_rate_percentage"/>
            </tree>
        </field>
    </record>

    <record id="fill_rate_action" model="ir.actions.act_window">
        <field name="name">Fill Rate</field>
        <field name="res_model">fill.rate</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_by_requisition': 1}</field>
    </record>

    <record id="fill_rate_action_generate" model="ir.actions.server">
        <field name="name">Generar Fill Rate</field>
        <field name="model_id" ref="model_fill_rate"/>
        <field name="state">code</field>
        <field name="code">
model.generate_fill_rate_data()
        </field>
    </record>

    <menuitem id="menu_requisition_reportes"
        name="Reportes"
        parent="employee_purchase_requisition.employee_purchase_requisition_menu_root"
        sequence="10"/>

    <menuitem id="menu_fill_rate"
        name="Fill Rate"
        parent="menu_requisition_reportes"
        action="fill_rate_action"
        sequence="10"/>

    <menuitem id="menu_generate_fill_rate"
        name="Generar Fill Rate"
        parent="menu_requisition_reportes"
        action="fill_rate_action_generate"
        sequence="20"/>
</odoo>