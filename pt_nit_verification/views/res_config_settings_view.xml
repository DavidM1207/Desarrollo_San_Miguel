<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pt_nit_verification_res_settings_view_form" model="ir.ui.view">
        <field name="name">pt_nit_verification_res_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <div id="pt_nit_verification_selector" groups="account.group_account_manager">
                    <h2>Facturación Electrónica - NIT</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="nit_fel_certifier" />
                                <span title="Certificador NIT" role="" aria-label="" />
                                <div class="row">
                                    <div class="text-muted col-lg-12">
                                        <field name="nit_fel_certifier" class=""  />
                                    </div>
                                    <div class="text-muted col-lg-12">
                                        Seleccione el certificador a utilizar para validar y recuperar los datos del nit.
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="nit_fel_certifier_url" />
                                <span title="Url certificador NIT" role="" aria-label="" />
                                <div class="row">
                                    <div class="text-muted col-lg-12">
                                        <field name="nit_fel_certifier_url" class=""  />
                                    </div>
                                    <div class="text-muted col-lg-12">
                                        Ingrese la url del certificador a utilizar para validar y recuperar los datos del nit.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </xpath>
        </field>

    </record>
</odoo>