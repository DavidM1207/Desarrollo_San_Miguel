<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_massive_nit_update_form" model="ir.ui.view">
            <field name="name">pt_nit_verification.nit.massive.update.form</field>
            <field name="model">pt_nit_verification.massive_nit_update</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="res_partner_ids">
                            <tree create="false" delete="false">
                                <field name="name"/>
                                <field name="vat"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Actualizar" name="update_contacts" type="object" class="oe_highlight" data-hotkey="u" />
                        <button string="Cancelar" class="btn btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>                    
                </form>
            </field>
        </record>


        <record id="action_massive_nit_update_wizard" model="ir.actions.act_window">
            <field name="name">Actualizaci√≥n de nits</field>
            <field name="res_model">pt_nit_verification.massive_nit_update</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_massive_nit_update_wizard" parent="contacts.res_partner_menu_config"  action="action_massive_nit_update_wizard" />

    </data>
</odoo>