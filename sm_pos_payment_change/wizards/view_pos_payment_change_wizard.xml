<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="view_pos_payment_change_wizard_form" model="ir.ui.view">
        <field name="model">pos.payment.change.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group >
                    <group >
                        <field name="order_id" string="Orden" />
                        <field name="session_state" invisible="1"/>
                        <field name="close_session_reason" invisible="session_state != 'closed'" required="session_state == 'closed'" />
                    </group>                    
                </group>
                <group col="4">
                    
                    <field name="amount_total" invisible="1" />
                    <field name="old_line_ids" colspan="4" string="Métodos de pago actual">
                        <tree>
                            <field name="old_payment_method_id" widget="selection" string="Método de pago" />
                            <field name="amount" sum="Total" string="Monto" />
                        </tree>
                    </field>
                    <newline />
                    <field
                        name="new_line_ids"
                        colspan="4"
                        context="{'new_line_ids': new_line_ids, 'amount_total': amount_total}"
                        string="Nuevos métodos de pago"
                    >
                        <tree editable="bottom">
                            <field name="available_payment_methods" column_invisible="True" />
                            <field name="new_payment_method_id" widget="selection" domain="[('id', 'in', available_payment_methods)]" string="Método de pago" />
                            <field name="amount" sum="Total" string="Monto" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button
                        name="button_change_payment"
                        string="Cambiar pagos del día"
                        type="object"
                        class="oe_highlight"
                    />
                    <button string="Cancelar" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pos_payment_change_wizard" model="ir.actions.act_window">
        <field name="name">Cambiar pagos del día</field>
        <field name="res_model">pos.payment.change.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
