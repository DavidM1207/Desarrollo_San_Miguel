<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- WIZARD: Formulario -->
    <record id="view_fill_rate_report_wizard_form" model="ir.ui.view">
        <field name="name">fill.rate.report.wizard.form</field>
        <field name="model">fill.rate.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Fill Rate">
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="requisition_ids" widget="many2many_tags"/>
                            <field name="product_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate_report" string="Generar Reporte" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- REPORTE: Vista Tree -->
    <record id="view_fill_rate_report_line_tree" model="ir.ui.view">
        <field name="name">fill.rate.report.line.tree</field>
        <field name="model">fill.rate.report.line</field>
        <field name="arch" type="xml">
            <tree string="Reporte de Fill Rate" 
                  decoration-success="fill_rate &gt;= 95" 
                  decoration-info="fill_rate &gt;= 80 and fill_rate &lt; 95"
                  decoration-warning="fill_rate &gt;= 60 and fill_rate &lt; 80"
                  decoration-danger="fill_rate &lt; 60"
                  create="false" edit="false">
                
                <field name="requisition_date"/>
                <field name="requisition_name"/>
                <field name="product_id"/>
                <field name="original_qty" sum="Total Original"/>
                <field name="sent_qty" sum="Total Enviado" optional="hide"/>
                <field name="received_qty" sum="Total Recibido"/>
                <field name="uom_id" optional="hide"/>
                <field name="fill_rate" widget="percentage" avg="Promedio"/>
                <field name="fill_rate_category" optional="hide"/>
                <field name="variance_qty" sum="Total Variacion" optional="hide"/>
                <field name="variance_percentage" optional="hide"/>
                <field name="location_dest_id" optional="hide"/>
                
                <button name="action_view_requisition" type="object" icon="fa-file-text-o" title="Ver Requisicion"/>
                <button name="action_view_picking_origin" type="object" icon="fa-arrow-right" title="Ver Traslado Origen" attrs="{'invisible': [('picking_origin_id', '=', False)]}"/>
                <button name="action_view_picking_dest" type="object" icon="fa-check-square" title="Ver Traslado Destino"/>
            </tree>
        </field>
    </record>

    <!-- REPORTE: Vista Search -->
    <record id="view_fill_rate_report_line_search" model="ir.ui.view">
        <field name="name">fill.rate.report.line.search</field>
        <field name="model">fill.rate.report.line</field>
        <field name="arch" type="xml">
            <search string="Buscar Fill Rate">
                <field name="requisition_name"/>
                <field name="product_id"/>
                <field name="location_dest_id"/>
                
                <filter name="filter_excellent" string="Excelente (>=95%)" domain="[('fill_rate', '&gt;=', 95)]"/>
                <filter name="filter_good" string="Bueno (80-94%)" domain="[('fill_rate', '&gt;=', 80), ('fill_rate', '&lt;', 95)]"/>
                <filter name="filter_regular" string="Regular (60-79%)" domain="[('fill_rate', '&gt;=', 60), ('fill_rate', '&lt;', 80)]"/>
                <filter name="filter_poor" string="Deficiente (&lt;60%)" domain="[('fill_rate', '&lt;', 60)]"/>
                
                <separator/>
                
                <filter name="filter_incomplete" string="Incompletos (&lt;100%)" domain="[('fill_rate', '&lt;', 100)]"/>
                <filter name="filter_complete" string="Completos (=100%)" domain="[('fill_rate', '=', 100)]"/>
                <filter name="filter_excess" string="Excedentes (&gt;100%)" domain="[('fill_rate', '&gt;', 100)]"/>
                
                <separator/>
                
                <group expand="0" string="Agrupar Por">
                    <filter name="group_by_requisition" string="Requisicion" context="{'group_by': 'requisition_name'}"/>
                    <filter name="group_by_product" string="Producto" context="{'group_by': 'product_id'}"/>
                    <filter name="group_by_category" string="Categoria Fill Rate" context="{'group_by': 'fill_rate_category'}"/>
                    <filter name="group_by_location" string="Ubicacion Destino" context="{'group_by': 'location_dest_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- REPORTE: Vista Graph -->
    <record id="view_fill_rate_report_line_graph" model="ir.ui.view">
        <field name="name">fill.rate.report.line.graph</field>
        <field name="model">fill.rate.report.line</field>
        <field name="arch" type="xml">
            <graph string="Analisis de Fill Rate" type="bar">
                <field name="product_id" type="row"/>
                <field name="fill_rate" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- REPORTE: Vista Pivot -->
    <record id="view_fill_rate_report_line_pivot" model="ir.ui.view">
        <field name="name">fill.rate.report.line.pivot</field>
        <field name="model">fill.rate.report.line</field>
        <field name="arch" type="xml">
            <pivot string="Tabla Dinamica Fill Rate">
                <field name="requisition_name" type="row"/>
                <field name="product_id" type="row"/>
                <field name="fill_rate" type="measure"/>
                <field name="original_qty" type="measure"/>
                <field name="received_qty" type="measure"/>
                <field name="variance_qty" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Accion Wizard -->
    <record id="action_fill_rate_report_wizard" model="ir.actions.act_window">
        <field name="name">Generar Reporte de Fill Rate</field>
        <field name="res_model">fill.rate.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Accion Reporte -->
    <record id="action_fill_rate_report_line" model="ir.actions.act_window">
        <field name="name">Reporte de Fill Rate</field>
        <field name="res_model">fill.rate.report.line</field>
        <field name="view_mode">tree,graph,pivot</field>
        <field name="context">{'search_default_group_by_requisition': 1}</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_requisition_reports"
              name="Reportes"
              parent="employee_purchase_requisition.employee_purchase_requisition_menu_root"
              sequence="100"/>

    <menuitem id="menu_fill_rate_report_wizard"
              name="Generar Fill Rate"
              parent="menu_requisition_reports"
              action="action_fill_rate_report_wizard"
              sequence="10"/>

    <menuitem id="menu_fill_rate_report_view"
              name="Ver Fill Rate"
              parent="menu_requisition_reports"
              action="action_fill_rate_report_line"
              sequence="20"/>

</odoo>