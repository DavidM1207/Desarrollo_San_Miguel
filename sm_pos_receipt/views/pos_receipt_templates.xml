<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar plantilla del recibo del POS para resaltar Cliente, NIT y Número de Orden -->
    
    <template id="OrderReceipt_bold_fields" inherit_id="point_of_sale.OrderReceipt">
        
        <!-- 1. NOMBRE DEL CLIENTE - En negrilla y más grande -->
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="attributes">
            <attribute name="style">font-weight: bold; font-size: 20px; margin: 15px 0; padding: 10px 0; border-top: 2px solid #000; border-bottom: 2px solid #000;</attribute>
        </xpath>
        
        <!-- 2. NIT DEL CLIENTE - En negrilla -->
        <xpath expr="//div[hasclass('pos-receipt-contact')]//div[contains(text(), 'NIT') or contains(text(), 'Tax ID') or contains(text(), 'RFC')]" position="attributes">
            <attribute name="style">font-weight: bold; font-size: 18px;</attribute>
        </xpath>
        
        <!-- 3. NÚMERO DE ORDEN - En negrilla y destacado -->
        <xpath expr="//div[hasclass('pos-receipt-order-data')]" position="attributes">
            <attribute name="style">font-weight: bold; font-size: 18px; margin: 15px 0; padding: 10px 0; border-top: 1px solid #000;</attribute>
        </xpath>
        
        <!-- Número de orden específicamente (puede estar en diferentes elementos) -->
        <xpath expr="//div[contains(@class, 'orderline') and contains(text(), 'Order')]" position="attributes">
            <attribute name="style">font-weight: bold; font-size: 18px;</attribute>
        </xpath>
        
    </template>
    
    <!-- También aplicar a Bill Receipt si se usa -->
    <template id="Bill_bold_fields" inherit_id="point_of_sale.Bill">
        
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="attributes">
            <attribute name="style">font-weight: bold; font-size: 20px; margin: 15px 0;</attribute>
        </xpath>
        
        <xpath expr="//div[hasclass('pos-receipt-order-data')]" position="attributes">
            <attribute name="style">font-weight: bold; font-size: 18px; margin: 15px 0;</attribute>
        </xpath>
        
    </template>
    
</odoo>