<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista formulario de pos.order con botón tracker -->
        <record id="view_pos_order_form_tracker" model="ir.ui.view">
            <field name="name">pos.order.form.tracker</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar botón en el buttonbox -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_tracker_projects" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-list-alt" 
                            groups="sm_tracker.group_tracker_user,sm_tracker.group_tracker_manager"
                            invisible="tracker_project_count == 0">
                        <field name="tracker_project_count" widget="statinfo" string="Trackers"/>
                    </button>
                </xpath>

                <!-- Agregar campo invisible para has_service_products -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="has_service_products" invisible="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>