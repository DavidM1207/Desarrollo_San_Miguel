<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Formato de Papel para Impresora Térmica 80mm x 297mm -->
        <!-- DEBE ESTAR PRIMERO, ANTES DEL REPORTE -->
        <record id="paperformat_boleta_termica" model="report.paperformat">
            <field name="name">Boleta Térmica 80mm x 297mm</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">297</field>  <!-- 297mm = 29.7cm (altura A4) -->
            <field name="page_width">80</field>     <!-- 80mm = 8cm (papel térmico estándar) -->
            <field name="orientation">Portrait</field>
            <field name="margin_top">3</field>
            <field name="margin_bottom">3</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">96</field>
        </record>

        <!-- Reporte de Boleta de Despacho para Impresora Térmica -->
        <!-- AHORA SÍ PUEDE USAR paperformat_boleta_termica -->
        <record id="action_report_boleta_despacho" model="ir.actions.report">
            <field name="name">Boleta de Despacho</field>
            <field name="model">tracker.project</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sm_tracker.report_boleta_despacho_document</field>
            <field name="report_file">sm_tracker.report_boleta_despacho_document</field>
            <field name="binding_model_id" ref="model_tracker_project"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Boleta_Despacho_%s' % (object.name)</field>
            <field name="paperformat_id" ref="paperformat_boleta_termica"/>
        </record>

        <!-- Template del Reporte Optimizado para Térmica 80mm x 297mm -->
        <!-- DISEÑO SIN BORDES, TEXTO GRANDE -->
        <template id="report_boleta_despacho_document">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-family: Arial, sans-serif; font-size: 13px; padding: 5px;">
                        
                        <!-- Encabezado -->
                        <div style="text-align: center; margin-bottom: 15px; border-bottom: 3px solid #000; padding-bottom: 8px;">
                            <div style="font-size: 18px; font-weight: bold; margin-bottom: 4px;">BOLETA DE DESPACHO</div>
                            <div style="font-size: 14px; font-weight: bold;">San Miguel S.A.</div>
                        </div>

                        <!-- Número de Orden -->
                        <div style="margin-bottom: 15px;">
                            <div style="font-weight: bold; font-size: 12px; margin-bottom: 3px;">ORDEN:</div>
                            <div style="font-size: 16px; font-weight: bold;">
                                <t t-esc="o.order_reference"/>
                            </div>
                        </div>

                        <!-- Fecha Creación -->
                        <div style="margin-bottom: 15px; font-size: 12px;">
                            <strong>FECHA:</strong>
                            <t t-esc="o.create_date.strftime('%d/%m/%Y %H:%M')" t-if="o.create_date"/>
                        </div>

                        <!-- Cliente -->
                        <div style="margin-bottom: 15px;">
                            <div style="font-weight: bold; font-size: 12px; margin-bottom: 3px;">CLIENTE:</div>
                            <div style="font-size: 14px; font-weight: bold; word-wrap: break-word;">
                                <t t-esc="o.partner_id.name"/>
                            </div>
                        </div>

                        <!-- Productos y Servicios -->
                        <div style="margin-bottom: 15px;">
                            <div style="font-weight: bold; font-size: 13px; border-bottom: 2px solid #000; padding-bottom: 3px; margin-bottom: 8px;">
                                PRODUCTOS Y SERVICIOS
                            </div>
                            <t t-foreach="o.task_ids" t-as="task">
                                <div style="margin-bottom: 8px; font-size: 12px;">
                                    <div style="font-weight: bold; margin-bottom: 2px;">
                                        <t t-esc="task.product_id.name if task.product_id else task.name"/>
                                    </div>
                                    <div>
                                        Cantidad: <t t-esc="task.quantity"/> - 
                                        <t t-if="task.state == 'done'">
                                            ✓ COMPLETADO
                                        </t>
                                        <t t-else="">
                                            PENDIENTE
                                        </t>
                                    </div>
                                    <div style="border-bottom: 1px solid #ccc; margin-top: 5px;"></div>
                                </div>
                            </t>
                        </div>

                        <!-- Detalle de Materiales -->
                        <div style="margin-bottom: 15px;">
                            <div style="font-weight: bold; font-size: 13px; border-bottom: 2px solid #000; padding-bottom: 3px; margin-bottom: 8px;">
                                DETALLE DE MATERIALES
                            </div>
                            <div style="font-size: 12px; margin-bottom: 10px;">
                                <strong>TABLEROS:</strong>
                                <div style="border-bottom: 2px solid #000; height: 25px; margin-top: 3px;"></div>
                            </div>
                            <div style="font-size: 12px; margin-bottom: 10px;">
                                <strong>PIEZAS CORTADAS:</strong>
                                <div style="border-bottom: 2px solid #000; height: 25px; margin-top: 3px;"></div>
                            </div>
                            <div style="font-size: 12px; margin-bottom: 10px;">
                                <strong>PIEZAS SOBRANTES:</strong>
                                <div style="border-bottom: 2px solid #000; height: 25px; margin-top: 3px;"></div>
                            </div>
                        </div>

                        <!-- Texto Legal - SIN FONDO AMARILLO -->
                        <div style="margin-bottom: 20px; border-top: 3px solid #000; border-bottom: 3px solid #000; padding: 10px 5px;">
                            <div style="font-size: 12px; font-weight: bold; text-align: justify; line-height: 1.3;">
                                Recibí conforme la totalidad de materiales del despacho descrito, verificando tableros completos, piezas cortadas, sobrantes, ferretería y madera. Confirmo satisfacción por la calidad entregada y eximo a San Miguel S.A. de reclamos posteriores sobre faltantes o material en mal estado. Después de 24 horas no será válido ningún reclamo.
                            </div>
                        </div>

                        <!-- Firma Cliente -->
                        <div style="margin-bottom: 15px;">
                            <div style="font-weight: bold; font-size: 12px; margin-bottom: 60px;">FIRMA DEL CLIENTE:</div>
                            <div style="border-top: 2px solid #000; padding-top: 5px; font-size: 11px;">
                                <strong>NOMBRE:</strong>
                                <div style="border-bottom: 2px solid #000; height: 20px; margin-top: 3px;"></div>
                            </div>
                        </div>

                        <!-- Despachador -->
                        <div style="margin-bottom: 15px;">
                            <div style="font-weight: bold; font-size: 12px; margin-bottom: 5px;">DESPACHADOR:</div>
                            <div style="font-size: 13px; margin-bottom: 50px;">
                                <t t-esc="o.user_id.name if o.user_id else '__________________'"/>
                            </div>
                            <div style="border-top: 2px solid #000; padding-top: 5px; font-size: 11px;">
                                <strong>FIRMA:</strong>
                                <div style="border-bottom: 2px solid #000; height: 20px; margin-top: 3px;"></div>
                            </div>
                        </div>

                        <!-- Fecha y Hora de Impresión -->
                        <div style="text-align: center; font-size: 10px; color: #666; margin-top: 15px; padding-top: 8px; border-top: 1px dashed #999;">
                            <div>
                                <strong>Impreso:</strong> 
                                <t t-esc="datetime.datetime.now().strftime('%d/%m/%Y %H:%M')"/>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>