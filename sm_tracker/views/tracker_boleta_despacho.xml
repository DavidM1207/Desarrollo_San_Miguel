<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Formato de Papel para Impresora Térmica 80mm x 297mm -->
        <!-- DEBE ESTAR PRIMERO, ANTES DEL REPORTE -->
        <record id="paperformat_boleta_termica" model="report.paperformat">
            <field name="name">Boleta Térmica 80mm x 297mm</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">297</field>  <!-- 297mm = 29.7cm (altura A4) -->
            <field name="page_width">80</field>     <!-- 80mm = 8cm (papel térmico estándar) -->
            <field name="orientation">Portrait</field>
            <field name="margin_top">3</field>
            <field name="margin_bottom">3</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">96</field>
        </record>

        <!-- Reporte de Boleta de Despacho para Impresora Térmica -->
        <!-- AHORA SÍ PUEDE USAR paperformat_boleta_termica -->
        <record id="action_report_boleta_despacho" model="ir.actions.report">
            <field name="name">Boleta de Despacho</field>
            <field name="model">tracker.project</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sm_tracker.report_boleta_despacho_document</field>
            <field name="report_file">sm_tracker.report_boleta_despacho_document</field>
            <field name="binding_model_id" ref="model_tracker_project"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Boleta_Despacho_%s' % (object.name)</field>
            <field name="paperformat_id" ref="paperformat_boleta_termica"/>
        </record>

        <!-- Template del Reporte Optimizado para Térmica 80mm x 297mm -->
        <template id="report_boleta_despacho_document">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-family: Arial, sans-serif; font-size: 9px; padding: 3px;">
                        
                        <!-- Encabezado -->
                        <div style="text-align: center; margin-bottom: 6px; border-bottom: 2px solid #000; padding-bottom: 4px;">
                            <div style="font-size: 13px; font-weight: bold; margin-bottom: 2px;">BOLETA DE DESPACHO</div>
                            <div style="font-size: 10px; font-weight: bold;">San Miguel S.A.</div>
                        </div>

                        <!-- Número de Orden -->
                        <div style="margin-bottom: 5px; border: 1px solid #000; padding: 3px;">
                            <div style="font-weight: bold; font-size: 8px; margin-bottom: 1px;">ORDEN:</div>
                            <div style="font-size: 10px; font-weight: bold;">
                                <t t-if="o.pos_order_id">
                                    <t t-esc="o.pos_order_id.name"/>
                                </t>
                                <t t-if="o.sale_order_id">
                                    <t t-esc="o.sale_order_id.name"/>
                                </t>
                            </div>
                        </div>

                        <!-- Fecha y Cliente en una sección -->
                        <div style="margin-bottom: 5px; border: 1px solid #000; padding: 3px; background-color: #f0f0f0;">
                            <div style="font-size: 8px; margin-bottom: 2px;">
                                <strong>FECHA:</strong>
                                <t t-esc="o.create_date.strftime('%d/%m/%Y %H:%M')" t-if="o.create_date"/>
                            </div>
                            <div style="font-weight: bold; font-size: 8px; margin-bottom: 1px;">CLIENTE:</div>
                            <div style="font-size: 9px; font-weight: bold; word-wrap: break-word;">
                                <t t-esc="o.partner_id.name"/>
                            </div>
                        </div>

                        <!-- Productos y Servicios -->
                        <div style="margin-bottom: 5px;">
                            <div style="font-weight: bold; font-size: 9px; border-bottom: 1px solid #000; padding-bottom: 2px; margin-bottom: 3px;">
                                PRODUCTOS Y SERVICIOS
                            </div>
                            <t t-foreach="o.task_ids" t-as="task">
                                <div style="margin-bottom: 3px; padding: 2px; border: 1px solid #ccc; font-size: 8px;">
                                    <div style="font-weight: bold; margin-bottom: 1px;">
                                        <t t-esc="task.product_id.name if task.product_id else task.name"/>
                                    </div>
                                    <div style="display: flex; justify-content: space-between;">
                                        <span>Cant: <t t-esc="task.quantity"/></span>
                                        <span>
                                            <t t-if="task.state == 'done'">
                                                ✓ OK
                                            </t>
                                            <t t-else="">
                                                Pend.
                                            </t>
                                        </span>
                                    </div>
                                </div>
                            </t>
                        </div>

                        <!-- Detalle de Materiales -->
                        <div style="margin-bottom: 5px; border: 2px solid #000; padding: 4px; background-color: #f8f8f8;">
                            <div style="font-weight: bold; font-size: 9px; margin-bottom: 3px; text-align: center;">
                                DETALLE DE MATERIALES
                            </div>
                            <div style="font-size: 8px; margin-bottom: 2px;">
                                <strong>TABLEROS:</strong>
                                <div style="border-bottom: 1px solid #000; height: 12px; margin-top: 1px;"></div>
                            </div>
                            <div style="font-size: 8px; margin-bottom: 2px;">
                                <strong>PIEZAS CORTADAS:</strong>
                                <div style="border-bottom: 1px solid #000; height: 12px; margin-top: 1px;"></div>
                            </div>
                            <div style="font-size: 8px; margin-bottom: 2px;">
                                <strong>PIEZAS SOBRANTES:</strong>
                                <div style="border-bottom: 1px solid #000; height: 12px; margin-top: 1px;"></div>
                            </div>
                        </div>

                        <!-- Texto Legal -->
                        <div style="margin-bottom: 5px; border: 2px solid #000; padding: 4px; background-color: #fffacd; font-size: 7px; text-align: justify; line-height: 1.2;">
                            Recibí conforme la totalidad de materiales del despacho, verificando tableros, piezas cortadas, sobrantes, ferretería y madera. Confirmo satisfacción por la calidad y eximo a San Miguel S.A. de reclamos posteriores. Después de 24 horas no será válido ningún reclamo.
                        </div>

                        <!-- Firma Cliente -->
                        <div style="margin-bottom: 5px; border: 1px solid #000; padding: 4px;">
                            <div style="font-weight: bold; font-size: 8px; margin-bottom: 25px;">FIRMA DEL CLIENTE:</div>
                            <div style="border-top: 1px solid #000; padding-top: 2px; font-size: 7px;">
                                <strong>NOMBRE:</strong>
                                <div style="border-bottom: 1px solid #000; height: 10px; margin-top: 1px;"></div>
                            </div>
                        </div>

                        <!-- Despachador -->
                        <div style="margin-bottom: 5px; border: 1px solid #000; padding: 4px;">
                            <div style="font-weight: bold; font-size: 8px; margin-bottom: 1px;">DESPACHADOR:</div>
                            <div style="font-size: 9px; margin-bottom: 20px;">
                                <t t-esc="o.user_id.name if o.user_id else '__________________'"/>
                            </div>
                            <div style="border-top: 1px solid #000; padding-top: 2px; font-size: 7px;">
                                <strong>FIRMA:</strong>
                                <div style="border-bottom: 1px solid #000; height: 10px; margin-top: 1px;"></div>
                            </div>
                        </div>

                        <!-- Fecha y Hora de Impresión -->
                        <div style="text-align: center; font-size: 7px; color: #666; margin-top: 5px; padding-top: 3px; border-top: 1px dashed #999;">
                            <div>
                                <strong>Impreso:</strong> 
                                <t t-esc="datetime.datetime.now().strftime('%d/%m/%Y %H:%M')"/>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>