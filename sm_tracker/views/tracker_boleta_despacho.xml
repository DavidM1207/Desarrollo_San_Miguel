<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Formato de Papel para Impresora Térmica 7.12cm x 70cm -->
        <!-- DEBE ESTAR PRIMERO, ANTES DEL REPORTE -->
        <record id="paperformat_boleta_termica" model="report.paperformat">
            <field name="name">Boleta Térmica 7.12cm x 70cm</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">800</field>  <!-- 70cm = 700mm -->
            <field name="page_width">2970</field>     <!-- 7.12cm = 71.2mm -->
            <field name="orientation">Portrait</field>
            <field name="margin_top">3</field>
            <field name="margin_bottom">3</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">96</field>
        </record>

        <!-- Reporte de Boleta de Despacho para Impresora Térmica -->
        <!-- AHORA SÍ PUEDE USAR paperformat_boleta_termica -->
        <record id="action_report_boleta_despacho" model="ir.actions.report">
            <field name="name">Boleta de Despacho</field>
            <field name="model">tracker.project</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sm_tracker.report_boleta_despacho_document</field>
            <field name="report_file">sm_tracker.report_boleta_despacho_document</field>
            <field name="binding_model_id" ref="model_tracker_project"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Boleta_Despacho_%s' % (object.name)</field>
            <field name="paperformat_id" ref="paperformat_boleta_termica"/>
        </record>

        <!-- Template del Reporte Optimizado para Térmica -->
        <template id="report_boleta_despacho_document">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-family: Arial, sans-serif; font-size: 10px; padding: 5px;">
                        
                        <!-- Encabezado -->
                        <div style="text-align: center; margin-bottom: 10px; border-bottom: 2px solid #000; padding-bottom: 8px;">
                            <div style="font-size: 14px; font-weight: bold; margin-bottom: 3px;">BOLETA DE DESPACHO</div>
                            <div style="font-size: 11px; font-weight: bold;">San Miguel S.A.</div>
                        </div>

                        <!-- Número de Orden -->
                        <div style="margin-bottom: 8px; border: 1px solid #000; padding: 5px;">
                            <div style="font-weight: bold; font-size: 9px; margin-bottom: 2px;">ORDEN:</div>
                            <div style="font-size: 11px; font-weight: bold;">
                                <t t-if="o.pos_order_id">
                                    <t t-esc="o.pos_order_id.name"/>
                                </t>
                                <t t-if="o.sale_order_id">
                                    <t t-esc="o.sale_order_id.name"/>
                                </t>
                            </div>
                        </div>

                        <!-- Fecha Creación -->
                        <div style="margin-bottom: 8px; font-size: 9px;">
                            <strong>FECHA:</strong>
                            <t t-esc="o.create_date.strftime('%d/%m/%Y %H:%M')" t-if="o.create_date"/>
                        </div>

                        <!-- Cliente -->
                        <div style="margin-bottom: 10px; border: 1px solid #000; padding: 5px; background-color: #f0f0f0;">
                            <div style="font-weight: bold; font-size: 9px; margin-bottom: 2px;">CLIENTE:</div>
                            <div style="font-size: 10px; font-weight: bold; word-wrap: break-word;">
                                <t t-esc="o.partner_id.name"/>
                            </div>
                        </div>

                        <!-- Productos y Servicios -->
                        <div style="margin-bottom: 10px;">
                            <div style="font-weight: bold; font-size: 10px; border-bottom: 1px solid #000; padding-bottom: 3px; margin-bottom: 5px;">
                                PRODUCTOS Y SERVICIOS
                            </div>
                            <t t-foreach="o.task_ids" t-as="task">
                                <div style="margin-bottom: 6px; padding: 4px; border: 1px solid #ccc; font-size: 9px;">
                                    <div style="font-weight: bold; margin-bottom: 2px;">
                                        <t t-esc="task.product_id.name if task.product_id else task.name"/>
                                    </div>
                                    <div style="display: flex; justify-content: space-between;">
                                        <span>Cant: <t t-esc="task.quantity"/></span>
                                        <span>
                                            <t t-if="task.state == 'done'">
                                                ✓ OK
                                            </t>
                                            <t t-else="">
                                                Pend.
                                            </t>
                                        </span>
                                    </div>
                                </div>
                            </t>
                        </div>

                        <!-- Detalle de Materiales -->
                        <div style="margin-bottom: 10px; border: 2px solid #000; padding: 6px; background-color: #f8f8f8;">
                            <div style="font-weight: bold; font-size: 10px; margin-bottom: 5px; text-align: center;">
                                DETALLE DE MATERIALES
                            </div>
                            <div style="font-size: 9px; margin-bottom: 3px;">
                                <strong>TABLEROS:</strong>
                                <div style="border-bottom: 1px solid #000; height: 15px; margin-top: 2px;"></div>
                            </div>
                            <div style="font-size: 9px; margin-bottom: 3px;">
                                <strong>PIEZAS CORTADAS:</strong>
                                <div style="border-bottom: 1px solid #000; height: 15px; margin-top: 2px;"></div>
                            </div>
                            <div style="font-size: 9px; margin-bottom: 3px;">
                                <strong>PIEZAS SOBRANTES:</strong>
                                <div style="border-bottom: 1px solid #000; height: 15px; margin-top: 2px;"></div>
                            </div>
                        </div>

                        <!-- Texto Legal -->
                        <div style="margin-bottom: 10px; border: 2px solid #000; padding: 6px; background-color: #fffacd; font-size: 8px; text-align: justify; line-height: 1.3;">
                            Recibí conforme la totalidad de materiales del despacho descrito, verificando tableros completos, piezas cortadas, sobrantes, ferretería y madera. Confirmo satisfacción por la calidad entregada y eximo a San Miguel S.A. de reclamos posteriores sobre faltantes o material en mal estado. Después de 24 horas no será válido ningún reclamo.
                        </div>

                        <!-- Firma Cliente -->
                        <div style="margin-bottom: 8px; border: 1px solid #000; padding: 6px;">
                            <div style="font-weight: bold; font-size: 9px; margin-bottom: 40px;">FIRMA DEL CLIENTE:</div>
                            <div style="border-top: 1px solid #000; padding-top: 3px; font-size: 8px;">
                                <strong>NOMBRE:</strong>
                                <div style="border-bottom: 1px solid #000; height: 12px; margin-top: 2px;"></div>
                            </div>
                        </div>

                        <!-- Despachador -->
                        <div style="margin-bottom: 8px; border: 1px solid #000; padding: 6px;">
                            <div style="font-weight: bold; font-size: 9px; margin-bottom: 2px;">DESPACHADOR:</div>
                            <div style="font-size: 10px; margin-bottom: 30px;">
                                <t t-esc="o.user_id.name if o.user_id else '__________________'"/>
                            </div>
                            <div style="border-top: 1px solid #000; padding-top: 3px; font-size: 8px;">
                                <strong>FIRMA:</strong>
                                <div style="border-bottom: 1px solid #000; height: 12px; margin-top: 2px;"></div>
                            </div>
                        </div>

                        <!-- Fecha y Hora de Impresión -->
                        <div style="text-align: center; font-size: 8px; color: #666; margin-top: 10px; padding-top: 5px; border-top: 1px dashed #999;">
                            <div>
                                <strong>Impreso:</strong> 
                                <t t-esc="datetime.datetime.now().strftime('%d/%m/%Y %H:%M')"/>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>