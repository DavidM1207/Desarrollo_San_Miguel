<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Tree de Proyectos Tracker -->
    <record id="view_tracker_project_tree" model="ir.ui.view">
        <field name="name">tracker.project.tree</field>
        <field name="model">tracker.project</field>
        <field name="arch" type="xml">
            <tree string="Proyectos Tracker" 
                  decoration-info="state=='pending'" 
                  decoration-warning="state=='in_progress'" 
                  decoration-success="state=='delivered'">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="analytic_account_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="task_count"/>
                <field name="total_hours" widget="float_time"/>
                <field name="date_start"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='pending'" 
                       decoration-warning="state=='in_progress'" 
                       decoration-success="state=='delivered'"/>
            </tree>
        </field>
    </record>
    
    <!-- Vista Form de Proyectos Tracker -->
    <record id="view_tracker_project_form" model="ir.ui.view">
        <field name="name">tracker.project.form</field>
        <field name="model">tracker.project</field>
        <field name="arch" type="xml">
            <form string="Proyecto Tracker">
                <header>
                    <button name="action_set_pending" 
                            string="Pendiente" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state == 'pending'"/>
                    <button name="action_set_in_progress" 
                            string="En Proceso" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state == 'in_progress'"/>
                    <button name="action_set_delivered" 
                            string="Entregar" 
                            type="object" 
                            class="btn-primary"
                            invisible="state == 'delivered'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="pending,in_progress,delivered"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tasks" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-tasks">
                            <field name="task_count" widget="statinfo" string="Tareas"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="analytic_account_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="total_hours" widget="float_time"/>
                            <field name="date_start" readonly="1"/>
                            <field name="date_end" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tareas" name="tasks">
                            <field name="task_ids" readonly="1">
                                <tree string="Tareas" 
                                      decoration-success="state=='done'" 
                                      decoration-warning="state=='in_progress'" 
                                      decoration-info="state=='paused'" 
                                      decoration-muted="state=='cancel'"
                                      create="0" 
                                      delete="0">
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="operator_id" widget="many2one_avatar_user"/>
                                    <field name="total_hours" widget="float_time"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state=='done'" 
                                           decoration-warning="state=='in_progress'" 
                                           decoration-info="state=='paused'" 
                                           decoration-muted="state=='cancel'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Agregar notas adicionales..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Vista Search de Proyectos Tracker -->
    <record id="view_tracker_project_search" model="ir.ui.view">
        <field name="name">tracker.project.search</field>
        <field name="model">tracker.project</field>
        <field name="arch" type="xml">
            <search string="Buscar Proyectos">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="analytic_account_id"/>
                <field name="user_id"/>
                <filter string="Pendiente" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="En Proceso" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Entregado" name="delivered" domain="[('state', '=', 'delivered')]"/>
                <separator/>
                <filter string="Mis Proyectos" name="my_projects" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Responsable" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Tienda" name="group_analytic" context="{'group_by': 'analytic_account_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Acción de ventana para Proyectos -->
    <record id="action_tracker_project" model="ir.actions.act_window">
        <field name="name">Proyectos Tracker</field>
        <field name="res_model">tracker.project</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay proyectos tracker todavía
            </p>
            <p>
                Los proyectos tracker se generan automáticamente al confirmar órdenes de venta con servicios.
            </p>
        </field>
    </record>

</odoo>