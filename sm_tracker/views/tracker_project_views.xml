<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_tracker_project_tree" model="ir.ui.view">
            <field name="name">tracker.project.tree</field>
            <field name="model">tracker.project</field>
            <field name="arch" type="xml">
                <tree string="Proyectos Tracker" decoration-info="state=='pending'" decoration-warning="state=='processing'" decoration-success="state=='delivered'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="analytic_account_id"/>
                    <field name="sale_order_id"/>
                    <field name="promise_date"/>
                    <field name="delivery_date"/>
                    <field name="state" widget="badge" decoration-info="state=='pending'" decoration-warning="state=='processing'" decoration-success="state=='delivered'"/>
                    <field name="task_count"/>
                    <field name="total_hours" widget="float_time"/>
                    <field name="delay_days"/>
                    <field name="progress" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <record id="view_tracker_project_form" model="ir.ui.view">
            <field name="name">tracker.project.form</field>
            <field name="model">tracker.project</field>
            <field name="arch" type="xml">
                <form string="Proyecto Tracker">
                    <header>
                        <button name="action_start_processing" string="Iniciar Procesamiento" type="object" invisible="state != 'pending'" class="oe_highlight"/>
                        <button name="action_mark_delivered" string="Marcar Entregado" type="object" invisible="state != 'processing'" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="pending,processing,delivered"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_tasks" type="object" class="oe_stat_button" icon="fa-tasks">
                                <field name="task_count" widget="statinfo" string="Tareas"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" readonly="1"/>
                                <field name="sale_order_id" readonly="1"/>
                                <field name="invoice_ids" widget="many2many_tags"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="analytic_account_id" options="{'no_create': True}" readonly="1"/>
                                <field name="promise_date"/>
                                <field name="delivery_date" readonly="state != 'delivered'"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="total_hours" widget="float_time"/>
                                <field name="delay_days"/>
                            </group>
                            <group>
                                <field name="progress" widget="progressbar"/>
                                <field name="state_changed_by" readonly="1"/>
                                <field name="state_changed_date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tareas de Servicio">
                                <field name="task_ids" nolabel="1">
                                    <tree decoration-muted="state=='cancel'" decoration-success="state=='done'" decoration-warning="state=='in_progress'" decoration-info="state=='paused'" create="0" delete="0">
                                        <field name="name"/>
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="employee_id"/>
                                        <field name="state" widget="badge" decoration-muted="state=='cancel'" decoration-success="state=='done'" decoration-warning="state=='in_progress'" decoration-info="state=='paused'"/>
                                        <field name="total_hours" widget="float_time"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notas">
                                <field name="notes" placeholder="Notas adicionales..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_tracker_project_kanban" model="ir.ui.view">
            <field name="name">tracker.project.kanban</field>
            <field name="model">tracker.project</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="state">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="analytic_account_id"/>
                    <field name="promise_date"/>
                    <field name="state"/>
                    <field name="task_count"/>
                    <field name="progress"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <span class="badge badge-pill">
                                        <i class="fa fa-tasks"/> <field name="task_count"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="partner_id"/>
                                    <br/>
                                    <field name="analytic_account_id"/>
                                    <br/>
                                    <i class="fa fa-calendar"/> <field name="promise_date"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="progress" widget="progressbar"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_tracker_project_search" model="ir.ui.view">
            <field name="name">tracker.project.search</field>
            <field name="model">tracker.project</field>
            <field name="arch" type="xml">
                <search string="Buscar Proyectos">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="analytic_account_id"/>
                    <field name="sale_order_id"/>
                    <separator/>
                    <filter string="Pendientes" name="pending" domain="[('state','=','pending')]"/>
                    <filter string="En Proceso" name="processing" domain="[('state','=','processing')]"/>
                    <filter string="Entregados" name="delivered" domain="[('state','=','delivered')]"/>
                    <separator/>
                    <filter string="Con Retraso" name="delayed" domain="[('delay_days','>',0)]"/>
                    <filter string="A Tiempo" name="on_time" domain="[('delay_days','&lt;=',0)]"/>
                    <separator/>
                    <filter string="Fecha Prometida" name="group_promise_date" context="{'group_by':'promise_date'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Tienda" name="group_analytic" context="{'group_by':'analytic_account_id'}"/>
                </search>
            </field>
        </record>

        <record id="action_tracker_project" model="ir.actions.act_window">
            <field name="name">Proyectos Tracker</field>
            <field name="res_model">tracker.project</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_tracker_project_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay proyectos tracker
                </p>
                <p>
                    Los proyectos se crean autom√°ticamente cuando confirmas una orden de venta con servicios.
                </p>
            </field>
        </record>

    </data>
</odoo>