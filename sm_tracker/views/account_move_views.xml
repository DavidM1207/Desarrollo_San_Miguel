<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista Form de Factura - Herencia -->
        <record id="view_account_move_form_tracker" model="ir.ui.view">
            <field name="name">account.move.form.tracker</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar botÃ³n de Tracker en facturas de cliente -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_tracker_projects" type="object" class="oe_stat_button" icon="fa-list-alt" invisible="move_type != 'out_invoice' or tracker_project_count == 0">
                        <field name="tracker_project_count" widget="statinfo" string="Trackers"/>
                    </button>
                </xpath>

            </field>
        </record>

    </data>
</odoo>