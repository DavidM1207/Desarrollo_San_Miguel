<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_tracker_timesheet_tree" model="ir.ui.view">
            <field name="name">tracker.timesheet.tree</field>
            <field name="model">tracker.timesheet</field>
            <field name="arch" type="xml">
                <tree string="Registros de Tiempo" create="0" edit="0" delete="0">
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="task_id"/>
                    <field name="project_id"/>
                    <field name="analytic_account_id"/>
                    <field name="name"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="hours" widget="float_time" sum="total_hours"/>
                    <field name="quantity" sum="total_quantity"/>
                </tree>
            </field>
        </record>

        <record id="view_tracker_timesheet_form" model="ir.ui.view">
            <field name="name">tracker.timesheet.form</field>
            <field name="model">tracker.timesheet</field>
            <field name="arch" type="xml">
                <form string="Registro de Tiempo" create="0">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" placeholder="Descripción del trabajo realizado..."/>
                            </h1>
                        </div>
                        <group>
                            <group string="Información del Registro">
                                <field name="employee_id" readonly="1" options="{'no_create': True}"/>
                                <field name="user_id" readonly="1"/>
                                <field name="task_id" readonly="1" options="{'no_create': True}"/>
                                <field name="project_id" readonly="1"/>
                            </group>
                            <group string="Ubicación y Fecha">
                                <field name="analytic_account_id" readonly="1" options="{'no_create': True}"/>
                                <field name="date" readonly="1"/>
                                <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group string="Tiempo Trabajado">
                            <group>
                                <field name="start_time" readonly="1" widget="datetime"/>
                                <field name="end_time" readonly="1" widget="datetime"/>
                            </group>
                            <group>
                                <field name="hours" readonly="1" widget="float_time"/>
                                <field name="quantity" readonly="1"/>
                            </group>
                        </group>
                        <group string="Notas (Editable)">
                            <field name="notes" placeholder="Puedes agregar notas adicionales aquí..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tracker_timesheet_search" model="ir.ui.view">
            <field name="name">tracker.timesheet.search</field>
            <field name="model">tracker.timesheet</field>
            <field name="arch" type="xml">
                <search string="Buscar Registros">
                    <field name="employee_id"/>
                    <field name="task_id"/>
                    <field name="project_id"/>
                    <field name="analytic_account_id"/>
                    <separator/>
                    <filter string="Mis Registros" name="my_timesheets" domain="[('user_id','=',uid)]"/>
                    <separator/>
                    <filter string="Hoy" name="today" domain="[('date','=',context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Esta Semana" name="this_week" domain="[('date','&gt;=',context_today().strftime('%Y-%m-%d')),('date','&lt;=',(context_today()+datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Este Mes" name="this_month" domain="[('date','&gt;=',context_today().strftime('%Y-%m-01'))]"/>
                    <separator/>
                    <filter string="Fecha" name="group_date" context="{'group_by':'date'}"/>
                    <filter string="Empleado" name="group_employee" context="{'group_by':'employee_id'}"/>
                    <filter string="Tarea" name="group_task" context="{'group_by':'task_id'}"/>
                    <filter string="Proyecto" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Tienda" name="group_analytic" context="{'group_by':'analytic_account_id'}"/>
                </search>
            </field>
        </record>

        <record id="action_tracker_timesheet" model="ir.actions.act_window">
            <field name="name">Registros de Tiempo</field>
            <field name="res_model">tracker.timesheet</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_tracker_timesheet_search"/>
            <field name="context">{'search_default_my_timesheets': 1, 'search_default_this_week': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Registra tu primer tiempo de trabajo
                </p>
                <p>
                    Los registros de tiempo te permiten medir las horas trabajadas en cada tarea.
                </p>
            </field>
        </record>

    </data>
</odoo>