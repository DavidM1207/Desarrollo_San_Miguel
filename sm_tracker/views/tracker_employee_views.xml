<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_hr_employee_form_tracker" model="ir.ui.view">
            <field name="name">hr.employee.form.tracker</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_tracker_tasks" type="object" class="oe_stat_button" icon="fa-tasks">
                        <field name="tracker_task_count" widget="statinfo" string="Tareas Tracker"/>
                    </button>
                    <button name="action_view_tracker_timesheets" type="object" class="oe_stat_button" icon="fa-clock-o">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="tracker_total_hours" widget="float_time"/>
                            </span>
                            <span class="o_stat_text">Horas Tracker</span>
                        </div>
                    </button>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Tracker" name="tracker">
                        <group>
                            <group>
                                <field name="is_tracker_manager"/>
                            </group>
                        </group>
                        
                        <group string="Tiendas como Operario">
                            <field name="tracker_analytic_account_operario_ids" widget="many2many_tags" nolabel="1"/>
                            <p class="text-muted">Tiendas donde puede ser asignado como operario de tareas</p>
                        </group>
                        
                        <group string="Servicios que Realiza">
                            <field name="tracker_product_ids" widget="many2many_tags" nolabel="1" 
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <p class="text-muted">Servicios/productos que puede realizar: Corte, Pegado, Barnizado, etc.</p>
                        </group>
                        
                        <group string="Tiendas como Responsable de Proyectos">
                            <field name="tracker_analytic_account_responsable_ids" widget="many2many_tags" nolabel="1"/>
                            <p class="text-muted">Tiendas donde puede ser responsable de proyectos</p>
                        </group>
                        
                        <group string="Tiendas para VisualizaciÃ³n">
                            <field name="tracker_analytic_account_visualizacion_ids" widget="many2many_tags" nolabel="1"/>
                            <p class="text-muted">Tiendas que puede ver sin necesariamente ejecutar tareas o ser responsable (para supervisores, gerentes, etc.)</p>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>