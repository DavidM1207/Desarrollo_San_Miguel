<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_tracker_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit.tracker</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_tracker_tasks" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-tasks">
                        <field name="tracker_task_count" widget="statinfo" string="Tareas"/>
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>