<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Tree de Tareas Tracker -->
    <record id="view_tracker_task_tree" model="ir.ui.view">
        <field name="name">tracker.task.tree</field>
        <field name="model">tracker.task</field>
        <field name="arch" type="xml">
            <tree string="Tareas Tracker" 
                  decoration-success="state=='done'" 
                  decoration-warning="state=='in_progress'" 
                  decoration-info="state=='paused'" 
                  decoration-muted="state=='cancel'"
                  create="0" 
                  delete="0">
                <field name="name"/>
                <field name="project_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="operator_id" widget="many2one_avatar_user"/>
                <field name="total_hours" widget="float_time"/>
                <field name="state" widget="badge"
                       decoration-success="state=='done'" 
                       decoration-warning="state=='in_progress'" 
                       decoration-info="state=='paused'" 
                       decoration-muted="state=='cancel'"/>
            </tree>
        </field>
    </record>
    
    <!-- Vista Form de Tareas Tracker (Estilo MRP) -->
    <record id="view_tracker_task_form" model="ir.ui.view">
        <field name="name">tracker.task.form</field>
        <field name="model">tracker.task</field>
        <field name="arch" type="xml">
            <form string="Tarea Tracker">
                <header>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,ready,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="sale_order_line_id" readonly="1"/>
                            <field name="quantity" readonly="1"/>
                        </group>
                        <group>
                            <field name="operator_id" 
                                   options="{'no_create': True, 'no_open': True}"
                                   attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}"/>
                            <field name="total_hours" widget="float_time"/>
                            <field name="start_time" readonly="1"/>
                            <field name="end_time" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Registros de Tiempo" name="timesheets">
                            <field name="timesheet_ids" 
                                   readonly="1" 
                                   create="0" 
                                   delete="0" 
                                   edit="0">
                                <tree string="Registros de Tiempo" 
                                      decoration-success="state=='stopped'" 
                                      decoration-warning="state=='running'">
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                    <field name="duration" widget="float_time" sum="Total"/>
                                    <field name="operator_id" widget="many2one_avatar_user"/>
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state=='stopped'" 
                                           decoration-warning="state=='running'"/>
                                </tree>
                            </field>
                            
                            <!-- Separador para total de horas -->
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_hours" 
                                       widget="float_time" 
                                       class="oe_subtotal_footer_separator"
                                       readonly="1"/>
                            </group>
                            
                            <!-- Botones de acción DEBAJO de la tabla -->
                            <div class="o_row mt-3">
                                <button name="action_start_task" 
                                        string="Iniciar" 
                                        type="object" 
                                        class="btn-success me-2"
                                        invisible="state not in ['ready', 'paused']"/>
                                
                                <button name="action_pause_task" 
                                        string="Pausar" 
                                        type="object" 
                                        class="btn-warning me-2"
                                        invisible="state != 'in_progress'"/>
                                
                                <button name="action_complete_task" 
                                        string="Finalizar" 
                                        type="object" 
                                        class="btn-primary me-2"
                                        invisible="state not in ['in_progress', 'paused']"/>
                                
                                <button name="action_cancel_task" 
                                        string="Cancelar" 
                                        type="object" 
                                        class="btn-secondary me-2"
                                        invisible="state in ['done', 'cancel']"
                                        confirm="¿Está seguro de cancelar esta tarea?"/>
                            </div>
                        </page>
                        
                        <page string="Información Adicional" name="info">
                            <group>
                                <group>
                                    <field name="started_by" readonly="1"/>
                                    <field name="paused_by" readonly="1"/>
                                </group>
                                <group>
                                    <field name="completed_by" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <field name="notes" placeholder="Agregar notas sobre la tarea..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Vista Kanban de Tareas Tracker -->
    <record id="view_tracker_task_kanban" model="ir.ui.view">
        <field name="name">tracker.task.kanban</field>
        <field name="model">tracker.task</field>
        <field name="arch" type="xml">
            <kanban string="Tareas Tracker" 
                    default_group_by="state" 
                    class="o_kanban_small_column">
                <field name="name"/>
                <field name="product_id"/>
                <field name="operator_id"/>
                <field name="total_hours"/>
                <field name="state"/>
                <field name="quantity"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="product_id"/>
                                <br/>
                                <span>Cantidad: <field name="quantity"/></span>
                                <br/>
                                <span>Horas: <field name="total_hours" widget="float_time"/></span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="operator_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vista Search de Tareas Tracker -->
    <record id="view_tracker_task_search" model="ir.ui.view">
        <field name="name">tracker.task.search</field>
        <field name="model">tracker.task</field>
        <field name="arch" type="xml">
            <search string="Buscar Tareas">
                <field name="name"/>
                <field name="project_id"/>
                <field name="product_id"/>
                <field name="operator_id"/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Listo" name="ready" domain="[('state', '=', 'ready')]"/>
                <filter string="En Proceso" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Pausado" name="paused" domain="[('state', '=', 'paused')]"/>
                <filter string="Completado" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Mis Tareas" name="my_tasks" domain="[('operator_id', '=', uid)]"/>
                <filter string="Sin Asignar" name="unassigned" domain="[('operator_id', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Operario" name="group_operator" context="{'group_by': 'operator_id'}"/>
                    <filter string="Proyecto" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Servicio" name="group_product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Acción de ventana para Tareas -->
    <record id="action_tracker_task" model="ir.actions.act_window">
        <field name="name">Tareas Tracker</field>
        <field name="res_model">tracker.task</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay tareas tracker todavía
            </p>
            <p>
                Las tareas tracker se generan automáticamente desde proyectos tracker.
            </p>
        </field>
    </record>
    
    <!-- Acción para ver mis tareas -->
    <record id="action_my_tracker_tasks" model="ir.actions.act_window">
        <field name="name">Mis Tareas</field>
        <field name="res_model">tracker.task</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('operator_id', '=', uid)]</field>
        <field name="context">{'search_default_in_progress': 1, 'search_default_paused': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tienes tareas asignadas
            </p>
        </field>
    </record>

</odoo>