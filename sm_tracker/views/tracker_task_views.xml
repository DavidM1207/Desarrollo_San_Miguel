<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_tracker_task_tree" model="ir.ui.view">
            <field name="name">tracker.task.tree</field>
            <field name="model">tracker.task</field>
            <field name="arch" type="xml">
                <tree string="Tareas de Servicio" decoration-muted="state=='cancel'" decoration-success="state=='done'" decoration-warning="state=='in_progress'" decoration-info="state=='paused'">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="product_id"/>
                    <field name="analytic_account_id" optional="show"/>
                    <field name="employee_id"/>
                    <field name="quantity"/>
                    <field name="quantity_done" optional="hide"/>
                    <field name="quantity_remaining"/>
                    <field name="expected_hours" widget="float_time" optional="hide"/>
                    <field name="total_hours" widget="float_time" sum="total"/>
                    <field name="state" widget="badge" decoration-muted="state=='cancel'" decoration-success="state=='done'" decoration-warning="state=='in_progress'" decoration-info="state=='paused'"/>
                    <button name="action_start_task" type="object" string="Iniciar" class="btn-success" icon="fa-play" invisible="state not in ['draft', 'ready', 'paused']"/>
                    <button name="action_pause_task" type="object" string="Pausar" class="btn-warning" icon="fa-pause" invisible="state != 'in_progress'"/>
                    <button name="action_complete_task" type="object" string="Finalizar" class="btn-primary" icon="fa-check" invisible="state not in ['in_progress', 'paused']"/>
                </tree>
            </field>
        </record>

        <record id="view_tracker_task_form" model="ir.ui.view">
            <field name="name">tracker.task.form</field>
            <field name="model">tracker.task</field>
            <field name="arch" type="xml">
                <form string="Tarea de Servicio">
                    <header>
                        <button name="action_start_task" string="Iniciar" type="object" invisible="state not in ['draft', 'ready', 'paused']" class="oe_highlight"/>
                        <button name="action_pause_task" string="Pausar" type="object" invisible="state != 'in_progress'" class="btn-warning"/>
                        <button name="action_complete_task" string="Finalizar" type="object" invisible="state not in ['in_progress', 'paused']" class="oe_highlight"/>
                        <button name="action_cancel_task" string="Cancelar" type="object" invisible="state not in ['draft', 'ready', 'in_progress', 'paused']"/>
                        <button name="action_reset_to_draft" string="Volver a Borrador" type="object" invisible="state != 'cancel'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,ready,in_progress,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_timesheets" type="object" class="oe_stat_button" icon="fa-clock-o">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="total_hours" widget="float_time"/>
                                    </span>
                                    <span class="o_stat_text">Horas</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Descripción de la tarea..." readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_create': True}" readonly="1"/>
                                <field name="product_id" options="{'no_create': True}" readonly="1"/>
                                <field name="employee_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="analytic_account_id" options="{'no_create': True}" readonly="1"/>
                                <field name="quantity"/>
                                <field name="quantity_done"/>
                                <field name="quantity_remaining"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="expected_hours" widget="float_time"/>
                                <field name="promise_date" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="current_start_time" readonly="1" invisible="not current_start_time"/>
                                <field name="state_changed_by" readonly="1"/>
                                <field name="state_changed_date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Registros de Tiempo">
                                <field name="timesheet_ids">
                                    <tree decoration-success="state=='stopped'" decoration-warning="state=='running'">
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="employee_id"/>
                                        <field name="start_time"/>
                                        <field name="end_time"/>
                                        <field name="state" invisible="1"/>
                                        <field name="hours" widget="float_time" sum="total_hours"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notas">
                                <field name="notes" placeholder="Notas adicionales..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_tracker_task_kanban" model="ir.ui.view">
            <field name="name">tracker.task.kanban</field>
            <field name="model">tracker.task</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="state">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="quantity_remaining"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                    <field name="total_hours"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="product_id"/>
                                    <br/>
                                    Cantidad: <field name="quantity"/> | Restante: <field name="quantity_remaining"/>
                                    <br/>
                                    <field name="employee_id" widget="many2one_avatar_employee"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <i class="fa fa-clock-o"/> <field name="total_hours" widget="float_time"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_tracker_task_search" model="ir.ui.view">
            <field name="name">tracker.task.search</field>
            <field name="model">tracker.task</field>
            <field name="arch" type="xml">
                <search string="Buscar Tareas">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="product_id"/>
                    <field name="employee_id"/>
                    <field name="analytic_account_id"/>
                    <separator/>
                    <filter string="Mis Tareas" name="my_tasks" domain="[('employee_id.user_id','=',uid)]"/>
                    <separator/>
                    <filter string="Borrador" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Listo" name="ready" domain="[('state','=','ready')]"/>
                    <filter string="En Progreso" name="in_progress" domain="[('state','=','in_progress')]"/>
                    <filter string="Pausado" name="paused" domain="[('state','=','paused')]"/>
                    <filter string="Terminadas" name="done" domain="[('state','=','done')]"/>
                    <filter string="Canceladas" name="cancel" domain="[('state','=','cancel')]"/>
                    <separator/>
                    <filter string="Proyecto" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Servicio" name="group_product" context="{'group_by':'product_id'}"/>
                    <filter string="Operario" name="group_employee" context="{'group_by':'employee_id'}"/>
                    <filter string="Tienda" name="group_analytic" context="{'group_by':'analytic_account_id'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by':'state'}"/>
                </search>
            </field>
        </record>

        <record id="action_tracker_task" model="ir.actions.act_window">
            <field name="name">Tareas de Servicio</field>
            <field name="res_model">tracker.task</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="view_tracker_task_search"/>
            <field name="context">{'search_default_my_tasks': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay tareas asignadas
                </p>
                <p>
                    Las tareas se generan automáticamente desde las órdenes de venta confirmadas.
                </p>
            </field>
        </record>

    </data>
</odoo>