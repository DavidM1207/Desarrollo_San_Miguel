<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista Form de Orden de Venta - Herencia -->
        <record id="view_sale_order_form_tracker" model="ir.ui.view">
            <field name="name">sale.order.form.tracker</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar botÃ³n de Tracker -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_tracker_projects" type="object" class="oe_stat_button" icon="fa-list-alt" attrs="{'invisible': [('tracker_project_count', '=', 0)]}">
                        <field name="tracker_project_count" widget="statinfo" string="Trackers"/>
                    </button>
                    <button name="action_create_tracker_project" string="Crear Tracker" type="object" class="oe_stat_button" icon="fa-plus-square" attrs="{'invisible': ['|', ('state', 'not in', ['sale', 'done']), ('has_service_products', '=', False)]}" groups="tracker.group_tracker_manager"/>
                </xpath>

                <!-- Agregar campo invisible para computed -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="has_service_products" invisible="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>