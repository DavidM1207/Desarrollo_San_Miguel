<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_sale_order_form_tracker" model="ir.ui.view">
            <field name="name">sale.order.form.tracker</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_tracker_projects" type="object" class="oe_stat_button" icon="fa-list-alt" invisible="tracker_project_count == 0">
                        <field name="tracker_project_count" widget="statinfo" string="Trackers"/>
                    </button>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="has_service_products" invisible="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>