<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_order_form_inherit_tracker" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.tracker</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_tracker_projects" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-project-diagram"
                            invisible="not tracker_project_ids">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="tracker_project_ids" widget="statinfo" string="Proyectos"/>
                            </span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="has_service_products" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>