<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_order_form_inherit_tracker" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.tracker</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="tracker_project_ids" widget="many2many_tags" invisible="not tracker_project_ids"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>