<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_product_template_form_tracker" model="ir.ui.view">
            <field name="name">product.template.form.tracker</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_general']" position="after">
                    <group string="Tracker" name="tracker_group">
                        <field name="tracker_active"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>