<!-- tracker/security/tracker_security.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Categoría de Módulo -->
        <record id="module_category_tracker" model="ir.module.category">
            <field name="name">Tracker</field>
            <field name="description">Gestión de seguimiento de proyectos</field>
            <field name="sequence">50</field>
        </record>

        <!-- Grupo: Usuario Tracker -->
        <record id="group_tracker_user" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_category_tracker"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Grupo: Manager Tracker -->
        <record id="group_tracker_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_tracker"/>
            <field name="implied_ids" eval="[(4, ref('group_tracker_user'))]"/>
        </record>

        <!-- Record Rules: Proyectos - Usuarios solo ven sus tiendas -->
        <record id="tracker_project_rule_user" model="ir.rule">
            <field name="name">Tracker Project: User - Own Store</field>
            <field name="model_id" ref="model_tracker_project"/>
            <field name="domain_force">[
                '|',
                ('analytic_account_id', 'in', user.employee_id.tracker_analytic_account_ids.ids),
                ('user_id', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_tracker_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Record Rules: Proyectos - Managers ven todo -->
        <record id="tracker_project_rule_manager" model="ir.rule">
            <field name="name">Tracker Project: Manager - All</field>
            <field name="model_id" ref="model_tracker_project"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_tracker_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules: Tareas - Usuarios solo ven sus tiendas -->
        <record id="tracker_task_rule_user" model="ir.rule">
            <field name="name">Tracker Task: User - Own Store</field>
            <field name="model_id" ref="model_tracker_task"/>
            <field name="domain_force">[
                '|',
                ('analytic_account_id', 'in', user.employee_id.tracker_analytic_account_ids.ids),
                ('employee_id', '=', user.employee_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_tracker_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Record Rules: Tareas - Managers ven todo -->
        <record id="tracker_task_rule_manager" model="ir.rule">
            <field name="name">Tracker Task: Manager - All</field>
            <field name="model_id" ref="model_tracker_task"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_tracker_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules: Timesheet - Usuarios solo ven sus registros -->
        <record id="tracker_timesheet_rule_user" model="ir.rule">
            <field name="name">Tracker Timesheet: User - Own Records</field>
            <field name="model_id" ref="model_tracker_timesheet"/>
            <field name="domain_force">[
                '|',
                ('analytic_account_id', 'in', user.employee_id.tracker_analytic_account_ids.ids),
                ('employee_id', '=', user.employee_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_tracker_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules: Timesheet - Managers ven todo -->
        <record id="tracker_timesheet_rule_manager" model="ir.rule">
            <field name="name">Tracker Timesheet: Manager - All</field>
            <field name="model_id" ref="model_tracker_timesheet"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_tracker_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>