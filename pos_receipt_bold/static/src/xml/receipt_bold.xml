<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceiptBold" t-inherit="OrderReceipt" t-inherit-mode="extension" owl="1">
        
        <!-- Cliente en negrilla -->
        <xpath expr="//div[contains(text(), 'Cliente:')]" position="replace">
            <div>
                <t t-if="props.data.partner">
                    <strong style="font-size: 120%;">Cliente: <t t-esc='props.data.partner.name'/></strong>
                </t>
            </div>
        </xpath>
        
        <!-- NIT en negrilla -->
        <xpath expr="//div[contains(., 'NIT:') or contains(., 'DPI:') or contains(., 'Pasaporte:')]" position="replace">
            <div>
                <t t-if="props.data.partner.vat and props.data.partner.vat != 'CF'">
                    <strong style="font-size: 110%;">NIT: <t t-esc='props.data.partner.vat or "-"'/></strong>
                </t>
                <t t-elif="props.data.partner.dpi_number and props.data.partner.dpi_number != ''">
                    <strong style="font-size: 110%;">DPI: <t t-esc='props.data.partner.dpi_number'/></strong>
                </t>
                <t t-elif="props.data.partner.passport_number and props.data.partner.passport_number != ''">
                    <strong style="font-size: 110%;">No. Pasaporte: <t t-esc='props.data.partner.passport_number'/></strong>
                </t>
                <t t-else="">
                    <strong style="font-size: 110%;">NIT: <t t-esc='props.data.partner.vat or "CF"'/></strong>
                </t>
            </div>
        </xpath>
        
        <!-- Número de recibo en negrilla -->
        <xpath expr="//div[contains(text(), 'Número de recibo:')]" position="replace">
            <div><strong style="font-size: 110%;">Número de recibo: <t t-esc="props.data.pos_reference" /></strong></div>
        </xpath>
        
    </t>
</templates>