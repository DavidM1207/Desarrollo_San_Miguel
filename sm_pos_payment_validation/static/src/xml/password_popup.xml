<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sm_pos_payment_validation.PasswordPopup">
        <div class="popup password-popup">
            <header class="title drag-handle">
                <t t-esc="props.title" />
            </header>
            
            <main class="body">
                <p class="popup-body-text" style="white-space: pre-line;">
                    <t t-esc="props.body" />
                </p>
                
                <div class="password-input-container" style="margin-top: 20px;">
                    <input 
                        type="password"
                        t-model="state.inputValue"
                        t-on-input="onInputChange"
                        placeholder="Ingresa el PIN"
                        class="password-input"
                        style="
                            width: 100%;
                            padding: 15px;
                            font-size: 24px;
                            text-align: center;
                            border: 2px solid #ddd;
                            border-radius: 8px;
                            letter-spacing: 8px;
                            font-weight: bold;
                        "
                        autofocus="autofocus"
                        inputmode="numeric"
                        pattern="[0-9]*"
                    />
                </div>
            </main>
            
            <footer class="footer">
                <button class="button cancel" t-on-click="cancel">
                    <t t-esc="props.cancelText" />
                </button>
                <button class="button confirm" t-on-click="confirm">
                    <t t-esc="props.confirmText" />
                </button>
            </footer>
        </div>
    </t>

</templates>