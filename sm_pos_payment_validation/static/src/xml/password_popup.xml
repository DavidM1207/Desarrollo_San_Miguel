<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sm_pos_payment_validation.PasswordPopup">
        <div class="popup number-popup password-popup">
            <header class="title drag-handle">
                <t t-esc="props.title" />
            </header>
            
            <main class="body">
                <p t-if="props.body" class="popup-body-text" style="white-space: pre-line; margin-bottom: 20px;">
                    <t t-esc="props.body" />
                </p>
                
                <!-- Display de puntos (similar al NumberPopup) -->
                <div class="number-display">
                    <div class="number-display-content">
                        <t t-esc="displayValue" />
                    </div>
                </div>

                <!-- Teclado numérico (igual al NumberPopup) -->
                <div class="number-pad">
                    <div class="number-pad-row">
                        <button class="number-button" t-on-click="() => this.appendDigit(1)">1</button>
                        <button class="number-button" t-on-click="() => this.appendDigit(2)">2</button>
                        <button class="number-button" t-on-click="() => this.appendDigit(3)">3</button>
                    </div>
                    <div class="number-pad-row">
                        <button class="number-button" t-on-click="() => this.appendDigit(4)">4</button>
                        <button class="number-button" t-on-click="() => this.appendDigit(5)">5</button>
                        <button class="number-button" t-on-click="() => this.appendDigit(6)">6</button>
                    </div>
                    <div class="number-pad-row">
                        <button class="number-button" t-on-click="() => this.appendDigit(7)">7</button>
                        <button class="number-button" t-on-click="() => this.appendDigit(8)">8</button>
                        <button class="number-button" t-on-click="() => this.appendDigit(9)">9</button>
                    </div>
                    <div class="number-pad-row">
                        <button class="number-button clear-button" t-on-click="clearInput">C</button>
                        <button class="number-button" t-on-click="() => this.appendDigit(0)">0</button>
                        <button class="number-button delete-button" t-on-click="deleteDigit">⌫</button>
                    </div>
                </div>
            </main>
            
            <footer class="footer">
                <button class="button cancel" t-on-click="cancel">
                    <t t-esc="props.cancelText" />
                </button>
                <button class="button confirm" t-on-click="confirm">
                    <t t-esc="props.confirmText" />
                </button>
            </footer>
        </div>
    </t>

</templates>